@model List<Product>


<div class="wrapper">
    <!-- Sidebar -->
    <aside id="sidebar">
        <div class="h-100">
            <div class="sidebar-logo">
                <a href="#">Meditrack</a>
            </div>
            <!-- Sidebar Navigation -->
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area=" " asp-controller="Home" asp-action="Dashboard">
                        <i class="bi bi-grid"></i>
                        Dashboard
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="" asp-controller="Home" asp-action="Profile">
                        <i class="bi bi-person"></i>
                        Profile
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#pages"
                       aria-expanded="false" aria-controls="pages">
                        <i class="fa-regular fa-file-lines pe-2"></i>
                        Management
                    </a>
                    <ul id="pages" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area=" " asp-controller="Home" asp-action="ManageUserAccount">User Account</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area=" " asp-controller="Home" asp-action="ManageVendor">Manage Supplier</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area=" " asp-controller="Home" asp-action="ManageProduct">Manage Product</a>
                        </li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="" asp-controller="Home" asp-action="Transaction">
                        <i class="bi bi-check2-square"></i>
                        Transactions
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="" asp-controller="Home" asp-action="Inventory">
                        <i class="bi bi-database"></i>
                        Inventory
                    </a>
                </li>

                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="" asp-controller="Home" asp-action="Notification">
                        <i class="bi bi-bell"></i>
                        Notifications
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="" asp-controller="Home" asp-action="Report">
                        <i class="bi bi-list-task"></i>
                        Reports
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="" asp-controller="Home" asp-action="Feedback">
                        <i class="bi bi-hand-thumbs-up"></i>
                        Feedback
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-box-arrow-right"></i>
                        Logout
                    </a>
                </li>
            </ul>
        </div>
    </aside>
    <!-- Main Component -->
    <div class="main">
        <nav class="navbar navbar-expand px-3 border-bottom">
            <!-- Button for sidebar toggle -->
            <button class="btn" type="button" data-bs-theme="light">
                <span class="navbar-toggler-icon "></span>
            </button>
        </nav>

        <main class="content px-3 py-2">
            <div class="container-fluid">
                <div class="mb-3">
                    
                    <div class="table-responsive table-bordered table-striped">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ProductID</th>
                                    <th>CategoryID</th>
                                    <th>Product Name</th>
                                    <th>SKU</th>
                                    <th>Brand</th>
                                    <th>Product Description</th>
                                    <th>Unit Price</th>
                                    <th>Unit Of Measurement</th>
                                    <th>Quantity In Stock</th>
                                    <th>Expiration Date/th>
                                    <th>LastUnit Price Updated</th>
                                    <th>Last Quantity In Stock Updated</th>
                                    <th>Is Active</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var obj in Model.OrderBy(u => u.ProductID))
                                {
                                    <tr>
                                        <td>@obj.ProductID</td>
                                        <td>@obj.CategoryID</td>
                                        <td>@obj.ProductName</td>
                                        <td>@obj.SKU</td>
                                        <td>@obj.Brand</td>
                                        <td>@obj.ProductDescription</td>
                                        <td>@obj.UnitPrice</td>
                                        <td>@obj.UnitOfMeasurement</td>
                                        <td>@obj.QuantityInStock</td>
                                        <td>@obj.ExpirationDate</td>
                                        <td>@obj.LastUnitPriceUpdated</td>
                                        <td>@obj.LastQuantityInStockUpdated</td>
                                        <td>@obj.isActive</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </main>
    </div>
</div>