@model List<Product>


<div class="wrapper">
    <!-- Sidebar -->
    <aside id="sidebar">
        <div class="h-100">
            <div class="sidebar-logo">
                <a href="#">Meditrack</a>
            </div>
            <!-- Sidebar Navigation -->
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Viewer" asp-controller="Home" asp-action="Profile">
                        <i class="bi bi-person"></i>
                        Profile
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Viewer" asp-controller="Home" asp-action="Inventory">
                        <i class="bi bi-database"></i>
                        Inventory
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Viewer" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-box-arrow-right"></i>
                        Logout
                    </a>
                </li>
            </ul>
        </div>
    </aside>
    <!-- Main Component -->
    <div class="main">
        <nav class="navbar navbar-expand px-3 border-bottom">
            <!-- Button for sidebar toggle -->
            <button class="btn" type="button" data-bs-theme="light">
                <span class="navbar-toggler-icon "></span>
            </button>
        </nav>

        <main class="content px-3 py-2">
            <div class="container-fluid">
                <div class="mb-3">
                    
                    <div class="mt-5">
                        <h3>Inventory List</h3>
                        <div class="table-responsive table-bordered table-striped">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>ProductID</th>
                                        <th>Category</th>
                                        <th>Product Name</th>
                                        <th>SKU</th>
                                        <th>Brand</th>
                                        <th>Product Description</th>
                                        <th>Unit Price</th>
                                        <th>Unit Of Measurement</th>
                                        <th>Quantity In Stock</th>
                                        <th>Expiration Date</th>
                                        <th>LastUnit Price Updated</th>
                                        <th>Last Quantity In Stock Updated</th>
                                        <th>Is Active</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var obj in Model.OrderBy(u => u.ProductID))
                                    {
                                        <tr>
                                            <td>@obj.ProductID</td>
                                            <td>@obj.ProductCategory.CategoryName</td>
                                            <td>@obj.ProductName</td>
                                            <td>@obj.SKU</td>
                                            <td>@obj.Brand</td>
                                            <td>@obj.ProductDescription</td>
                                            <td>@obj.UnitPrice</td>
                                            <td>@obj.UnitOfMeasurement</td>
                                            <td>@obj.QuantityInStock</td>
                                            <td>@obj.ExpirationDate</td>
                                            <td>@obj.LastUnitPriceUpdated</td>
                                            <td>@obj.LastQuantityInStockUpdated</td>
                                            <td>@obj.isActive</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </main>
    </div>
</div>