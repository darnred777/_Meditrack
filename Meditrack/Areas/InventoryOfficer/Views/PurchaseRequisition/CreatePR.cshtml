                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="InventoryOfficer" asp-controller="Product" asp-action="ManageProduct">Manage Product</a>
                        </li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="InventoryOfficer" asp-controller="Home" asp-action="Transaction">
                        <i class="bi bi-check2-square"></i>
