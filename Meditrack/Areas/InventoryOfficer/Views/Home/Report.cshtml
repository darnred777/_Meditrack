@using Microsoft.AspNetCore.Identity
@using Meditrack.Utility

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="wrapper">
    <!-- Sidebar -->
    <aside id="sidebar">
        <div class="h-100">
            <div class="sidebar-logo">
                <a>Meditrack</a>
            </div>
            <!-- Sidebar Navigation -->
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="InventoryOfficer" asp-controller="Home" asp-action="Dashboard">
                        <i class="bi bi-grid"></i>
                        Dashboard
                    </a>
                </li>
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="sidebar-item">
                        <a class="sidebar-link" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                            <i class="bi bi-person"></i>
                            Profile
                        </a>
                    </li>
                }
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#pages"
                       aria-expanded="false" aria-controls="pages">
                        <i class="fa-regular fa-file-lines pe-2"></i>
                        Management
                    </a>
                    <ul id="pages" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="InventoryOfficer" asp-controller="Supplier" asp-action="ManageVendor">Manage Supplier</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="InventoryOfficer" asp-controller="Product" asp-action="ManageProduct">Manage Inventory</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="InventoryOfficer" asp-controller="Location" asp-action="ManageLocation">Manage Location</a>
                        </li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="InventoryOfficer" asp-controller="PRTransaction" asp-action="PRDList">
                        <i class="bi bi-check2-square"></i>
                        Transactions
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="InventoryOfficer" asp-controller="Product" asp-action="ExpiringProducts">
                        <i class="bi bi-bell"></i>
                        Notifications
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="InventoryOfficer" asp-controller="Home" asp-action="Report">
                        <i class="bi bi-list-task"></i>
                        Reports
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="InventoryOfficer" asp-controller="Home" asp-action="TransactionLogs">
                        <i class="bi bi-card-checklist"></i>
                        Transaction Logs
                    </a>
                </li>
                <li class="sidebar-item">
                    <form id="logoutForm" class="sidebar-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="btn btn-link border-0 sidebar-logout">
                            <i class="bi bi-box-arrow-right ms-1"></i>
                            Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </aside>

    <!-- Main Component -->
    <!-- Main Component -->
    @{
        ViewData["Title"] = "Report";
    }

    <main class="content px-3 py-2">
        <div class="container">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Display Report</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col">
                            <h2 class="text-primary">Transaction Reports</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-info text-white mb-3">
                                <div class="card-body">
                                    <h4 class="card-title">Total Approved Purchase Requisitions Today</h4>
                                    <p class="card-text">@ViewBag.TotalApprovedPRs</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-success text-white mb-3">
                                <div class="card-body">
                                    <h4 class="card-title">Total Approved Purchase Requisitions This Month</h4>
                                    <p class="card-text">@ViewBag.TotalApprovedPRsCurrentMonth</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-warning text-white mb-3">
                                <div class="card-body">
                                    <h4 class="card-title">Total Approved Purchase Requisitions This Year</h4>
                                    <p class="card-text">@ViewBag.TotalApprovedPRsCurrentYear</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-primary text-white mb-3">
                                <div class="card-body">
                                    <h4 class="card-title">Total Cost of Approved PRs This Month</h4>
                                    <p class="card-text">@ViewBag.TotalAmountApprovedThisMonth.ToString("C")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-danger text-white mb-3">
                                <div class="card-body">
                                    <h4 class="card-title">Total Cost of Approved PRs This Year</h4>
                                    <p class="card-text">@ViewBag.TotalAmountApprovedThisYear.ToString("C")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


    <!-- End of Component -->
</div>