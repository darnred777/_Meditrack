@model List<TransactionLogsVM>

<div class="mb-3">
    <a asp-area="InventoryOfficer" asp-controller="Home" asp-action="Dashboard" class="btn btn-outline-primary mb-3">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

<h1>Transaction Logs</h1>

<table class="table">
    <thead>
        <tr>
            <th>Transaction ID</th>
            <th>Transaction Type</th>
            <th>Created By</th>
            @* <th>Status</th> *@
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Transaction Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.TransactionID</td>
                <td>@log.TransType</td>
                <td>@log.ApplicationUserEmail</td>
                @* <td>@log.StatusDescription</td> *@
                <td>@log.ProductName</td>
                <td>@log.Quantity</td>
                <td>@log.TransDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
