@model PRTransactionVM

@* <p>Created by: @Model.CreatedByUserId</p> *@

<div class="container">
    <h3 class="my-4">Purchase Requisition</h3>

    <form method="post" asp-controller="PRTransaction" asp-action="ViewPR" asp-area="Admin">
        <div class="row">
            <div class="col-md-6">
                <!-- Purchase Requisition Header Fields -->
                <div class="mb-3">
                    <input asp-for="PurchaseRequisitionHeader.PRHdrID" class="form-control" hidden />
                </div>
                <div class="mb-3">
                    <label asp-for="PurchaseRequisitionHeader.Supplier.SupplierName">Supplier</label>
                    <input asp-for="PurchaseRequisitionHeader.Supplier.SupplierName" class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label asp-for="PurchaseRequisitionHeader.Location.LocationAddress">Location</label>
                    <input asp-for="PurchaseRequisitionHeader.Location.LocationAddress" class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label asp-for="PurchaseRequisitionHeader.Status.StatusDescription">Status</label>
                    <input asp-for="PurchaseRequisitionHeader.Status.StatusDescription" class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label asp-for="PurchaseRequisitionHeader.PRDate">PR Date</label>
                    <input asp-for="PurchaseRequisitionHeader.PRDate" class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label asp-for="PurchaseRequisitionHeader.TotalAmount">Total Amount</label>
                    <input asp-for="PurchaseRequisitionHeader.TotalAmount" class="form-control" readonly>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Additional Purchase Requisition Detail Fields -->
                <div class="mb-3">                  
                    <input asp-for="PurchaseRequisitionDetail.PRDtlID" class="form-control" hidden />
                </div>
                <div class="mb-3">
                    <input asp-for="PurchaseRequisitionDetail.PRHdrID" class="form-control" hidden />
                </div>
                <div class="mb-3">
                    <label asp-for="PurchaseRequisitionDetail.Product.ProductName">Product Name</label>
                    <input asp-for="PurchaseRequisitionDetail.Product.ProductName" class="form-control" readonly>
                </div>
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PurchaseRequisitionDetail.UnitPrice">Unit Price</label>
                        <input asp-for="PurchaseRequisitionDetail.UnitPrice" class="form-control" id="unitPrice" readonly>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="PurchaseRequisitionDetail.UnitOfMeasurement">Unit Of Measurement</label>
                        <input asp-for="PurchaseRequisitionDetail.UnitOfMeasurement" class="form-control" id="unitOfMeasurement" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PurchaseRequisitionDetail.QuantityInOrder">Quantity In Order</label>
                    <input asp-for="PurchaseRequisitionDetail.QuantityInOrder" class="form-control" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="PurchaseRequisitionDetail.Subtotal">Subtotal</label>
                    <input asp-for="PurchaseRequisitionDetail.Subtotal" class="form-control" readonly>
                </div>
            </div>
        </div>
        <div class="row mt-4">           
            <div class="col-md-6">
                <a asp-area="Admin" asp-controller="PRTransaction" asp-action="PRDList" class="btn btn-outline-primary">Back</a>
            </div>
        </div>
    </form>
</div>