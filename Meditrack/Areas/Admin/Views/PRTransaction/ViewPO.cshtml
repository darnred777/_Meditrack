@model PRTransactionVM

<div class="container">
    <h3 class="my-4">Purchase Order</h3>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }


    <form method="post" asp-controller="PRTransaction" asp-action="ViewPO" asp-area="Admin">
        <div class="row">
            <div class="col-md-6">
                <!-- Purchase Requisition Header Fields -->
                <div class="mb-3">
                    <input asp-for="PurchaseOrderHeader.POHdrID" class="form-control" hidden />
                </div>
                <div class="mb-3">
                    <label asp-for="PurchaseOrderHeader.SupplierID">Supplier</label>
                    <select asp-for="@Model.PurchaseOrderHeader.SupplierID" asp-items="@Model.SupplierList" class="form-select" required>
                        <option disabled selected>--Select Supplier--</option>
                    </select>
                    <span asp-validation-for="PurchaseOrderHeader.SupplierID" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PurchaseOrderHeader.LocationID">Location</label>
                    <select asp-for="@Model.PurchaseOrderHeader.LocationID" asp-items="@Model.LocationList" class="form-select" required>
                        <option disabled selected>--Select Location--</option>
                    </select>
                    <span asp-validation-for="PurchaseOrderHeader.LocationID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Additional Purchase Requisition Detail Fields -->
                <div class="mb-3">
                    <input asp-for="PurchaseOrderDetail.PODtlID" class="form-control" hidden />
                </div>
                <div class="mb-3">
                    <input asp-for="PurchaseOrderDetail.POHdrID" class="form-control" hidden />
                </div>
                <div class="mb-3">
                    <select asp-for="@Model.PurchaseOrderDetail.ProductID" asp-items="@Model.ProductList" class="form-select" id="productDropdown" required>
                        <option disabled selected>--Select Product--</option>
                    </select>
                    <span asp-validation-for="PurchaseOrderDetail.ProductID" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        <input asp-for="PurchaseOrderDetail.UnitPrice" class="form-control" id="unitPrice" readonly>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="PurchaseOrderDetail.UnitOfMeasurement">Unit Of Measurement:</label>
                        <input asp-for="PurchaseOrderDetail.UnitOfMeasurement" class="form-control" id="unitOfMeasurement" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PurchaseOrderDetail.QuantityInOrder">Quantity In Order:</label>
                    <input asp-for="PurchaseOrderDetail.QuantityInOrder" class="form-control" required>
                    <span asp-validation-for="PurchaseOrderDetail.QuantityInOrder" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            <div class="col-md-6">
                <a asp-area="Admin" asp-controller="PRTransaction" asp-action="PRDList" class="btn btn-outline-secondary">Back</a>
            </div>
        </div>
    </form>
</div>