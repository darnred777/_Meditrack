@model List<Location>

<div class="wrapper">  
    <!-- Main Component -->
    <div class="main">
        <nav class="navbar navbar-expand px-3 border-bottom">
            <!-- Button for sidebar toggle -->
            <button class="btn" type="button" data-bs-theme="light">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
        <main class="content px-3 py-2">
            <div class="container-fluid">
                <div class="mb-3">

                    <!--Main Content-->
                    
                    <div class="row">
                        <div class="col-6">
                            <h3 class="mt-3">Manage Location</h3>
                        </div>
                        <div class="col-6">
                            <a asp-area="Admin" asp-controller="Location" asp-action="AddLocation" class="btn btn-primary mt-2 form-control">Add Location</a>
                        </div>                      
                    </div>

                    <div class="mt-5">
                        <div class="table-responsive table-bordered table-striped">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Location ID</th>
                                        <th>Location Type</th>
                                        <th>Location Address</th>
                                        <th>Date Created</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var obj in Model.OrderBy(u => u.LocationID))
                                    {
                                        <tr>
                                            <td>@obj.LocationID</td>
                                            <td>@obj.LocationType</td>
                                            <td>@obj.LocationAddress</td>
                                            <td>@obj.DateCreated</td>
                                            <td>
                                                <div class="w-75 btn-group" role="group">
                                                    <a asp-area="Admin" asp-controller="Location" asp-action="EditLocation" asp-route-LocationID="@obj.LocationID" class="btn btn-primary mx-2">
                                                        <i class="bi bi-pencil-square"></i> Edit
                                                    </a>
                                                    <a asp-area="Admin" asp-controller="Location" asp-action="DeleteLocation" asp-route-LocationID="@obj.LocationID" class="btn btn-danger mx-2">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!--End of Content-->

                </div>
            </div>
        </main>
    </div>
</div>
