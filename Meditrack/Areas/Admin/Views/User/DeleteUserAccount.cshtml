@model User

<!--Main Content-->

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <!-- Profile Picture (Placeholder, replace with actual image source) -->
            <img src="https://via.placeholder.com/150" alt="Profile Picture" class="img-fluid rounded-circle">
            <div class="mt-3">
                <!-- Update Role Info -->
                @* <h5>Choose Role:</h5>
                <div class="form-group">
                <select class="form-control">
                <option>Admin</option>
                <option>Inventory Officer</option>
                <option>Approver</option>
                <option>Viewer</option>
                </select>
                </div> *@
            </div>
        </div>

        <div class="col-md-9">
            <!-- Update Information Description -->
            <h3 class="mb-4">Delete User Account</h3>
            <form method="post">
                <!-- User Info to be Updated -->
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="UserID">UserID:</label>
                        <input asp-for="UserID" disabled class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="LocationID">LocationID:</label>
                        <input asp-for="LocationID" disabled name="LocationID" class="form-control" readonly>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Username">Username:</label>
                        <input asp-for="Username" disabled class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password:</label>
                        <input asp-for="Password" disabled class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email:</label>
                        <input asp-for="Email" disabled class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="FirstName">Firstname:</label>
                        <input asp-for="FirstName" disabled class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName">Lastname:</label>
                        <input asp-for="LastName" disabled class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="BirthDate">Birth Date:</label>
                        <input asp-for="BirthDate" disabled class="form-control">
                    </div>
                    <div class="form-group col-md-6 mt-3 mb-3">
                        <label asp-for="ProfilePicture">Upload Profile Picture:</label>
                        <input asp-for="ProfilePicture" disabled class="form-control-file">
                    </div>
                    <div class="form-group col-md-6 mt-3 mb-3">
                        <label asp-for="RegistrationDate">Registration Date:</label>
                        <input asp-for="RegistrationDate" disabled class="form-control-file" readonly>
                    </div>
                    <div class="form-group col-md-6 mt-3 mb-3">
                        <label asp-for="LastLoginTime_Date">Last Login Time/Date:</label>
                        <input asp-for="LastLoginTime_Date" disabled class="form-control-file" readonly>
                    </div>
                    <div class="form-group col-md-6 mt-3 mb-3">
                        <label asp-for="IsActive">Is Active:</label>
                        <input asp-for="IsActive" disabled class="form-control-file">
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger mt-4 form-control">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-area="Admin" asp-controller="User" asp-action="ManageUserAccount" class="btn btn-outline-secondary border mt-4 form-control">Back</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<!--End of Content-->