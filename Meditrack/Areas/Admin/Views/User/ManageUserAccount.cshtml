@model List<User>

<div class="wrapper">
    <!-- Sidebar -->
    <aside id="sidebar">
        <div class="h-100">
            <div class="sidebar-logo">
                <a href="#">Meditrack</a>
            </div>
            <!-- Sidebar Navigation -->
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Dashboard">
                        <i class="bi bi-grid"></i>
                        Dashboard
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Profile">
                        <i class="bi bi-person"></i>
                        Profile
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#pages"
                       aria-expanded="false" aria-controls="pages">
                        <i class="fa-regular fa-file-lines pe-2"></i>
                        Management
                    </a>
                    <ul id="pages" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="Admin" asp-controller="User" asp-action="ManageUserAccount">User Account</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="Admin" asp-controller="Supplier" asp-action="ManageVendor">Manage Supplier</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="Admin" asp-controller="Product" asp-action="ManageProduct">Manage Product</a>
                        </li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Transaction">
                        <i class="bi bi-check2-square"></i>
                        Transactions
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Inventory">
                        <i class="bi bi-database"></i>
                        Inventory
                    </a>
                </li>

                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Notification">
                        <i class="bi bi-bell"></i>
                        Notifications
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Report">
                        <i class="bi bi-list-task"></i>
                        Reports
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Feedback">
                        <i class="bi bi-hand-thumbs-up"></i>
                        Feedback
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-box-arrow-right"></i>
                        Logout
                    </a>
                </li>
            </ul>
        </div>
    </aside>
    <!-- Main Component -->
    <div class="main">
        <nav class="navbar navbar-expand px-3 border-bottom">
            <!-- Button for sidebar toggle -->
            <button class="btn" type="button" data-bs-theme="light">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
        <main class="content px-3 py-2">
            <div class="container-fluid">
                <div class="mb-3">

                    <!--Main Content-->

                    <header>
                        <nav class="navbar navbar-expand-sm">
                            <div class="container-fluid">
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbarNav">
                                    <ul class="navbar-nav">
                                        <li class="nav-item">
                                            <a class="nav-link">Users</a>
                                        </li>
                                        <div class="vr"></div>
                                        <li class="nav-item">
                                            <a class="sidebar-link" asp-area="Admin" asp-controller="UserGroup" asp-action="ManageUserGroup">User Group</a>
                                        </li>
                                        <div class="vr"></div>
                                        <li class="nav-item">
                                            <a class="sidebar-link" asp-area="Admin" asp-controller="User" asp-action="AddNewUserAccount">Add New User</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    </header>


                    <div class="mt-5">

                        <div class="mt-5">
                            <div class="table-responsive table-bordered table-striped">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>UserID</th>
                                            <th>LocationID</th>
                                            <th>Username</th>
                                            <th>Password</th>
                                            <th>Email</th>
                                            <th>Firstname</th>
                                            <th>Lastname</th>
                                            <th>Birth Date</th>
                                            <th>Profile Picture</th>
                                            <th>Registration Date</th>
                                            <th>Last Login Time/Date</th>
                                            <th>IsActive</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var obj in Model.OrderBy(u => u.UserID))
                                        {
                                            <tr>
                                                <td>@obj.UserID</td>
                                                <td>@obj.LocationID</td>
                                                <td>@obj.Username</td>
                                                <td>@obj.Password</td>
                                                <td>@obj.Email</td>
                                                <td>@obj.FirstName</td>
                                                <td>@obj.LastName</td>
                                                <td>@obj.BirthDate</td>
                                                <td>@obj.ProfilePicture</td>
                                                <td>@obj.RegistrationDate</td>
                                                <td>@obj.LastLoginTime_Date</td>
                                                <td>@obj.IsActive</td>
                                                <td>
                                                    <div class="w-75 btn-group" role="group">
                                                        <a asp-area="Admin" asp-controller="User" asp-action="EditUserAccount" asp-route-UserID="@obj.UserID" class="btn btn-primary mx-2">
                                                                <i class="bi bi-pencil-square"></i> Edit
                                                        </a>
                                                        <a asp-area="Admin" asp-controller="User" asp-action="DeleteUserAccount" asp-route-UserID="@obj.UserID" class="btn btn-danger mx-2">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!--End of Content-->

                    </div>
                </div>
        </main>
    </div>
</div>