@model List<PurchaseRequisitionDetail>

<div class="wrapper">
    <!-- Sidebar -->
    <aside id="sidebar">
        <div class="h-100">
            <div class="sidebar-logo">
                <a href="#">Meditrack</a>
            </div>
            <!-- Sidebar Navigation -->
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Dashboard">
                        <i class="bi bi-grid"></i>
                        Dashboard
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Profile">
                        <i class="bi bi-person"></i>
                        Profile
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#pages"
                       aria-expanded="false" aria-controls="pages">
                        <i class="fa-regular fa-file-lines pe-2"></i>
                        Management
                    </a>
                    <ul id="pages" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="Admin" asp-controller="User" asp-action="ManageUserAccount">Manage User Account</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="Admin" asp-controller="Supplier" asp-action="ManageVendor">Manage Supplier</a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="Admin" asp-controller="Product" asp-action="ManageProduct">Manage Inventory</a>
                        </li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="PurchaseRequisition" asp-action="ManagePurchaseRequisition">
                        <i class="bi bi-check2-square"></i>
                        Transactions
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Inventory">
                        <i class="bi bi-database"></i>
                        Inventory
                    </a>
                </li>

                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Notification">
                        <i class="bi bi-bell"></i>
                        Notifications
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Report">
                        <i class="bi bi-list-task"></i>
                        Reports
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Feedback">
                        <i class="bi bi-hand-thumbs-up"></i>
                        Feedback
                    </a>
                </li>
                <li class="sidebar-item">
                    <a class="sidebar-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-box-arrow-right"></i>
                        Logout
                    </a>
                </li>
            </ul>
        </div>
    </aside>
    <!-- Main Component -->
    <div class="main">
        <nav class="navbar navbar-expand px-3 border-bottom">
            <!-- Button for sidebar toggle -->
            <button class="btn" type="button" data-bs-theme="light">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
        <main class="content px-3 py-2">
            <div class="container-fluid">
                <div class="mb-3">

                    <!--Main Content-->
                    <header>
                        <nav class="navbar navbar-expand-sm">
                            <div class="container-fluid">
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbarNav">
                                    <ul class="navbar-nav">
                                        <li class="nav-item">
                                            <a class="sidebar-link" asp-area="Admin" asp-controller="PurchaseRequisition" asp-action="ManagePurchaseRequisition">Purchase Requisition Header</a>
                                        </li>
                                        <div class="vr"></div>
                                        <li class="nav-item">
                                            <a class="sidebar-link" asp-area="Admin" asp-controller="PurchaseRequisition" asp-action="ManagePurchaseRequisitionDetail">Purchase Requisition Detail</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    </header>
                    <div class="row">
                        <div class="col-6">
                            <a asp-area="Admin" asp-controller="PurchaseRequisition" asp-action="UpsertPurchaseRequisitionHeader" class="btn btn-primary border mt-2 form-control">Add New Purchase Requisition Header</a>
                        </div>
                        <div class="col-6">
                            <a asp-area="Admin" asp-controller="PurchaseRequisition" asp-action="UpsertPurchaseRequisitionDetail" class="btn btn-primary mt-2 form-control">Add New Purchase Requisition Detail</a>
                        </div>                      
                    </div>

                    <div class="mt-5">
                        <div class="table-responsive table-bordered table-striped">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>PR Detail ID</th>
                                        <th>PR Header ID</th>
                                        <th>Product</th>
                                        <th>Unit Price</th>
                                        <th>Unit Of Measurement</th>
                                        <th>Quantity In Order</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var obj in Model.OrderBy(u => u.ProductID))
                                    {
                                        <tr>
                                            <td>@obj.PRDtlID</td>
                                            <td>@obj.PRHdrID</td>
                                            <td>@obj.Product.ProductName</td>
                                            <td>@obj.UnitPrice</td>
                                            <td>@obj.UnitOfMeasurement</td>
                                            <td>@obj.QuantityInOrder</td>
                                            <td>@obj.Subtotal</td>
                                            <td>
                                                <div class="w-75 btn-group" role="group">
                                                    <a asp-area="Admin" asp-controller="PurchaseRequisition" asp-action="UpsertPurchaseRequisitionDetail" asp-route-PRDtlID="@obj.PRDtlID" class="btn btn-primary mx-2">
                                                        <i class="bi bi-pencil-square"></i> Edit
                                                    </a>
                                                    <a asp-area="Admin" asp-controller="PurchaseRequisition" asp-action="DeleteProductCategory" asp-route-PRDtlID="@obj.PRDtlID" class="btn btn-danger mx-2">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!--End of Content-->

                </div>
            </div>
        </main>
    </div>
</div>
